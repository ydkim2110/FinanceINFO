<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linLayout1"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Welcome to Finance INFO"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말! 인사말!"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_below="@+id/linLayout1"
        android:layout_marginTop="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_email_text"
                android:hint="이메일"
                android:text="anti2110@naver.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout2"
        android:layout_below="@+id/relLayout1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_password_text"
                android:hint="비밀번호"
                android:text="starc4512@"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout3"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/relLayout2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/login_btn"
            android:text="LOGIN"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relLayout3"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/login_register_btn"
            android:text="REGISTER"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/login_progressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/login_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_progressbar"
        android:text="로그인중입니다..."
        android:layout_centerHorizontal="true"/>

</RelativeLayout>